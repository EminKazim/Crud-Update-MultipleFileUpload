@model List<Slider>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}
<div class="container-fluid  mt-5">
    <div class="row ms-12">
        <div class="header d-flex justify-content-between mt-3">
            <h3>Create</h3>
            <div>
                <a class="btn btn-success" asp-action="Create">Create</a>
            </div>
        </div>
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            Number
                        </th>
                        <th>
                            Image
                        </th>
                        <th>
                            Settings
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @count
                            </td>
                            <td>
                                <img src="~/assets/img/@item.Image" style="width:300px;height:150px" alt="slider" />
                            </td>
                            <td>
                                <a class="btn btn-primary btn-sm" asp-action="Detail" asp-route-id="@item.Id">
                                    Detail
                                </a>
                                <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">
                                    Edit
                                </a>
                                <form style="display:inline-block" method="post" asp-action="Delete" asp-route-id="@item.Id">
                                    <button class="btn btn-danger btn-sm" type="submit">
                                        Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                        count++;
                    }

                </tbody>
            </table>
        </div>
    </div>

</div>


